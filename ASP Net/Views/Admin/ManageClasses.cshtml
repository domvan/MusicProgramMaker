@model IEnumerable<MusicMakerProgram.Models.Class>

<div class="containter p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Class List</h2>
            
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th calss="text-center">ClassID</th>
                    <th class="text-center">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                     <tr>
                        <td width="40%">@c.ClassID</td>
                        <td width="60%">
                            <div class="col offset-4">
                                <a asp-action="UpdateClass" asp-route-Id="@c.ClassID" class="btn btn-primary w-40 mx-1">Update</a>
                                <a asp-action="DeleteClass" asp-route-Id="@c.ClassID" class="btn btn-danger w-40 mx-1">Delete</a>
                            </div>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Classes in DB</p>
    }
</div>
