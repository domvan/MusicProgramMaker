@model MusicMakerProgram.Models.Teacher

<h1>Teacher Login Page</h1>

<form method="post" asp-action="Login">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row offset-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                </div>
                <div class="form-group row offset-2">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">

                            <input type="submit" class="btn btn-info w-75" value="login" />

                        </div>
                        <div class="col">
                            <a asp-action="Create" class="btn btn-info w-75">Register</a>
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-danger w-75">Cancel</a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
