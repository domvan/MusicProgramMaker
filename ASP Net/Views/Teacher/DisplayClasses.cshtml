@model IEnumerable<MusicMakerProgram.Models.Class>


<div class="containter p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Class List</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ClassID</th>
                    <th>NumberOfStudents</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Class in Model)
                {
                    <tr>
                        <td width="50%">
                            <a asp-controller="Teacher" asp-action="DisplayStudents" asp-route-ID="@Class.ClassID" class="btn btn-primary w-50">@Class.ClassID</a>
                        </td>
                        <td width="50%">@Class.NumberOfStudents</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Classes in DB</p>
    }
</div>