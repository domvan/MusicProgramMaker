@model IEnumerable<MusicMakerProgram.Models.Piece>


<div class="containter p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Piece List</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Piece Name</th>
                    <th>ComposerID</th>
                    <th>Link</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var piece in Model)
                {
                <tr>
                    <td width="25%">@piece.PName</td>
                    <td width="25%">
                        <a asp-controller="Performer" asp-action="DisplayComposer" asp-route-ID="@piece.CID" class="btn btn-primary w-50">@piece.CID</a>
                    </td>
                    <td width="25%">@piece.MusicSheetLink</td>
                    <td width="25%">@piece.Info</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Pieces in DB</p>
    }
</div>